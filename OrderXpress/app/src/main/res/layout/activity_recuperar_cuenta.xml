<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".recuperarCuenta">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!---Titulo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="360dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"
                    android:hint="Recuperar contraseña"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <!---Seccion de campos -->




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/borde">


                <EditText
                    android:id="@+id/etIPassword"
                    android:layout_toStartOf="@+id/passwordicon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Nueva Contraseña"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="20sp"
                    android:maxLength="25"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    />


                <ImageView
                    android:id="@+id/passwordicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/eyeoff"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/borde">


                <EditText
                    android:id="@+id/conetIPassword"
                    android:layout_toStartOf="@+id/passwordicon2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Confirmar Contraseña"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="20sp"
                    android:maxLength="25"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    />


                <ImageView
                    android:id="@+id/passwordicon2"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:padding="10dp"
                    android:src="@drawable/eyeoff" />
            </RelativeLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"></Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRegistrarse"
                    android:layout_width="200dp"
                    android:layout_height="65dp"
                    android:backgroundTint="#3D69BF"
                    android:elevation="200dp"
                    android:onClick="irAInicio"
                    android:text="Confirmar"
                    android:textColor="@color/Blanco"
                    android:translationZ="200dp"
                    app:cornerRadius="100dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"></Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnVolver"
                    android:layout_width="200dp"
                    android:layout_height="65dp"
                    android:backgroundTint="#3D69BF"
                    android:elevation="200dp"
                    android:onClick="irAInicio"
                    android:text="Cancelar"
                    android:textColor="@color/Blanco"
                    android:translationZ="200dp"
                    app:cornerRadius="100dp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>