<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- Título -->
    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pedido Ágil"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="16dp" />

    <!-- Mapa
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />interactivo -->

    <!-- Tabla de direcciones -->
    <ListView
        android:id="@+id/directionsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Tarjeta de resumen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Datos de destino -->
        <TextView
            android:id="@+id/destinationTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destino"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/destinationAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/distanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distancia"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/estimatedTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo estimado"
            android:textSize="16sp" />

    </LinearLayout>








</FrameLayout>